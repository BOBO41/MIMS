@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>XX医院药库管理系统</title>

    @*Easyui需要引入的文件*@
    <script type="text/javascript" src="~/Content/jquery-easyui-1.4.5/jquery.min.js"></script>
    <script type="text/javascript" src="~/Content/jquery-easyui-1.4.5/jquery.easyui.min.js"></script>
    <link href="~/Content/jquery-easyui-1.4.5/themes/default/easyui.css" rel="stylesheet" />
    <link href="~/Content/jquery-easyui-1.4.5/themes/icon.css" rel="stylesheet" />

    @*本地css和js引入*@
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Content/Site.js"></script>
</head>
<body class="easyui-layout">
    <div region="north" id="header">
        <img src="~/Content/image/Medicine.png" id="logo" />
        <h1 id="title">XX医院药库管理系统</h1>
    </div>
    <div region="west" class="easyui-panel" title="导航菜单" split="true" style="width:220px">
        <div class="easyui-accordion" style="height:480px">
            <div title="基本信息管理" data-options="iconCls:'icon-information'" style="overflow:auto;padding:10px;">
                <ul class="easyui-tree">
                    <li><a href="#" onclick="addTab('入库方式维护', '../BaseInfoMaintenance/InWarehouseMode')">入库方式维护</a></li>
                    <li><a href="#" onclick="addTab('出库方式维护', '../BaseInfoMaintenance/ExWarehouseMode')">出库方式维护</a></li>
                    <li><a href="#" onclick="addTab('进货单位维护', '../BaseInfoMaintenance/PurchaseCompany')">进货单位维护</a></li>
                    <li><a href="#" onclick="addTab('药品产地维护', '../BaseInfoMaintenance/Orgin')">药品产地维护</a></li>
                    <li><a href="#" onclick="addTab('药库维护', '../BaseInfoMaintenance/DrugInfo')">药库维护</a></li>
                </ul>
            </div>
            <div title="药品管理" data-options="iconCls:'icon-pill'" style="padding:10px;">
                <ul class="easyui-tree">
                    <li><a href="#" onclick="addTab('药品基本信息', '../DrugManagement/DrugInfo')">药品基本信息</a></li>
                </ul>
            </div>
            <div title="进销存管理" data-options="iconCls:'icon-buy'" style="padding:10px;"></div>
            <div title="盘查询管理" data-options="iconCls:'icon-Inventory'" style="padding:10px;"></div>
            <div title="系统设置" data-options="iconCls:'icon-setup'" style="padding:10px;"></div>
        </div>
    </div>
    <div region="center" class="easyui-tabs" id="tabs">
        <div title="欢迎使用" style="padding:0 10px 0 10px;text-align:center;">
            <img id="welcomeimg" src="~/Content/image/welcome.png" />
        </div>
    </div>

    <div region="south" id="footer">
        <p id="foot">版权所有：药库管理系统 浙江农林大学 Kontinue maoqyzj@outlook.com</p>
    </div>
</body>
</html>
